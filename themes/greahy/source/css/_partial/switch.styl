body {
  margin: 0
  padding: 0
  font-family: 'Nunito', sans-serif
}

main {
  display: flex
  justify-content: center
  align-items: center
  width: 100vw
  height: 100vh
  background-color: #24262D
  color: white
}

.switch > label {
  position: relative
}

.switch > input[type="checkbox"] {
  opacity: 0
}

.switch > label::before,
.switch > label::after {
  --switch-width: 40px
  --switch-height: 14px
  --circle-width: 21px
  --circle-height: 21px
  content: ""
  position: absolute
  height: var(--switch-height)
}

.switch > label::before {
  width: var(--switch-width)
  border: 1px solid white
  top: 0
  left: calc(0px - var(--switch-width) - 5px)
  background-color: #989898
  border-radius: var(--switch-width)
}

.switch > label.warm-heart::after {
  background-color: #e32817
}

.switch > label::after {
  width: var(--circle-width)
  height: var(--circle-width)
  top: -2px
  border-radius: var(--switch-height)
  left: calc(0px - var(--switch-width) - 4px)
  transition: transform .3s
  background-color: white
  box-shadow: 0 1px 5px 0 rgba(0, 0, 0, 0.6)
  transform-origin: left
}

.switch > input[type=checkbox]:not(:checked) ~ label::after {
  transform: translateX(0)
}

.switch > input[type=checkbox]:checked ~ label::after {
  transform: translateX(calc(var(--switch-width) / 2))
  background-color: #1b72e8
}

.switch > input[type=checkbox]:checked ~ label::before {
  background-color: #93b9f4
}
